{
  "name": "pb-for-desktop",
  "productName": "PB for Desktop",
  "version": "6.2.0",
  "description": "Pushbullet Desktop app for macOS, Windows and Linux.",
  "license": "MIT",
  "homepage": "https://sidneys.github.io/pb-for-desktop",
  "author": {
    "name": "sidneys",
    "email": "sidneys.github.io@outlook.com",
    "url": "https://github.com/sidneys"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sidneys/pb-for-desktop.git"
  },
  "bugs": {
    "url": "https://github.com/sidneys/pb-for-desktop/issues"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "os": [
    "darwin",
    "win32",
    "linux"
  ],
  "keywords": [
    "pushbullet",
    "pushes",
    "notification",
    "chrome",
    "safari",
    "desktop",
    "electron",
    "mac",
    "macos",
    "osx",
    "windows",
    "linux",
    "ubuntu",
    "native",
    "pushover"
  ],
  "preferGlobal": true,
  "dependencies": {
    "app-root-path": "^2.0.1",
    "appdirectory": "^0.1.0",
    "auto-launch": "git://github.com/sidneys/node-auto-launch.git#master",
    "babel-cli": "^6.26.0",
    "babel-preset-electron": "^1.4.15",
    "chalk": "^2.2.0",
    "chalkline": "0.0.5",
    "clean-css": "^4.1.9",
    "electron-editor-context-menu": "^1.1.1",
    "electron-settings": "^3.1.3",
    "electron-updater": "^2.13.0",
    "file-url": "^2.0.2",
    "filesize": "^3.5.11",
    "fs-extra": "^4.0.2",
    "get-youtube-id": "^1.0.0",
    "is-reachable": "^2.3.3",
    "keypath": "^0.0.1",
    "lodash": "^4.17.4",
    "minimist": "^1.2.0",
    "moment": "^2.19.1",
    "parse-domain": "^1.1.0",
    "parse-semver": "^1.1.1",
    "present": "^1.0.0",
    "remove-markdown": "^0.2.2",
    "semver-compare": "^1.0.0",
    "simple-reload": "0.0.4",
    "try-require": "latest"
  },
  "devDependencies": {
    "docdash": "^0.4.0",
    "electron": "1.7.9",
    "electron-builder": "^19.37.2",
    "electron-connect": "^0.6.2",
    "electron-prebuilt-compile": "1.7.9",
    "eslint": "^4.9.0",
    "fkill": "^5.1.0",
    "git-branch": "^1.0.0",
    "globby": "^6.1.0",
    "gulp": "^3.9.1",
    "gulp-load-plugins": "^1.5.0",
    "hash-files": "^1.1.1",
    "is-ci": "^1.0.10",
    "jsdoc": "^3.5.5",
    "json2md": "^1.5.10",
    "minami": "^1.2.3",
    "progress": "^2.0.0",
    "publish-release": "^1.3.3",
    "yamljs": "^0.3.0"
  },
  "optionalDependencies": {
    "7zip-bin-mac": "^1.0.1",
    "7zip-bin-win": "^2.1.1",
    "7zip-bin-linux": "^1.1.0"
  },
  "main": "./app/scripts/main/components/application.js",
  "bin": {
    "pb-for-desktop": "./bin/cli.js"
  },
  "scripts": {
    "build": "node ./lib/build.js",
    "deploy": "node ./lib/deploy.js",
    "generate-docs": "./node_modules/.bin/jsdoc --verbose --configure .jsdoc.json",
    "livereload": "./node_modules/.bin/gulp",
    "localsetup": "./node_modules/.bin/babel-node ./lib/localsetup.js",
    "releasenotes": "node ./lib/releasenotes.js",
    "start": "./node_modules/.bin/electron ./app/scripts/main/components/application.js"
  },
  "build": {
    "appId": "de.sidneys.pb-for-desktop",
    "asar": true,
    "asarUnpack": [
      "sounds"
    ],
    "compression": "maximum",
    "directories": {
      "buildResources": "./build/staging",
      "output": "./build/output"
    },
    "files": [
      "!.appveyor.yml",
      "!.babelrc",
      "!.editorconfig",
      "!.eslintignore",
      "!.eslintrc",
      "!.github/**",
      "!.gitignore",
      "!.npmignore",
      "!.travis.yml",
      "!build/**",
      "!gh-pages/**",
      "!resources/**",
      "!website/**"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "./icons/darwin/icon.icns",
      "target": [
        "dir",
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "./icons/win32/icon.ico",
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "category": "Utility",
      "icon": "./icons/linux",
      "target": [
        "AppImage",
        "deb",
        "pacman",
        "rpm"
      ]
    },
    "dmg": {
      "background": "./icons/darwin/background-setup.png",
      "icon": "./icons/darwin/icon-setup.icns"
    },
    "nsis": {
      "artifactName": "${name}-${version}-setup.${ext}",
      "deleteAppDataOnUninstall": true,
      "installerHeader": "./icons/win32/header-setup.bmp",
      "installerHeaderIcon": "./icons/win32/icon.ico",
      "installerIcon": "./icons/win32/icon-setup.ico",
      "installerSidebar": "./icons/win32/background-setup.bmp",
      "oneClick": false,
      "runAfterFinish": false
    }
  }
}
